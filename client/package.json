{
  "name": "hexagon-client",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/wildland/hexagon.git"
  },
  "license": "GPL-3.0",
  "scripts": {
    "build": "vite build",
    "copy-typechain": "cp -r ../typechain-types ./src/typechain-types",
    "dev": "yarn predev && vite",
    "eslint": "eslint './**/*.{js,jsx,ts,tsx}'",
    "eslint:fix": "yarn prettier && yarn eslint --fix",
    "install-root-packages": "cd .. && yarn install && yarn compile && cd client",
    "predev": "yarn install-root-packages && yarn install",
    "preinstall": "yarn install-root-packages && yarn remove-typechain && yarn copy-typechain",
    "prettier": "yarn prettier:js --loglevel silent && yarn prettier:ts --loglevel silent",
    "prettier:js": "yarn prettier:js:pure './**/*.{js,jsx}'",
    "prettier:js:pure": "prettier --write",
    "prettier:ts": "yarn prettier:ts:pure './**/*.{ts,tsx}'",
    "prettier:ts:pure": "prettier --parser typescript --write",
    "preview": "vite preview",
    "remove-typechain": "rm -rf ./src/typechain-types",
    "test": "TZ=UTC jest",
    "type-check": "tsc --noEmit true"
  },
  "dependencies": {
    "@ethersproject/constants": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@reduxjs/toolkit": "^1.9.1",
    "axios": "^0.27.2",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "ethers": "^5.7.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.2",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.7.0",
    "react-select": "^5.7.0",
    "react-toastify": "^9.1.1",
    "redux": "^4.2.0",
    "redux-actions": "^2.6.5",
    "reselect": "^4.1.7",
    "use-metamask": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.6",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vitejs/plugin-react": "^3.0.1",
    "eslint": "8.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.3",
    "regenerator-runtime": "^0.13.11",
    "sass": "^1.57.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "engines": {
    "node": ">= 16.13.0 <17.0.0"
  },
  "lint-staged": {
    "./**/*.js": [
      "yarn prettier:js:pure",
      "eslint --fix"
    ],
    "./**/*.{ts,tsx}": [
      "yarn prettier:ts:pure",
      "eslint --fix"
    ]
  }
}
