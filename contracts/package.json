{
  "name": "octant-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "npx hardhat clean",
    "compile": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat compile",
    "deploy:goerli": "npx hardhat --network goerli deploy --tags testnet",
    "deploy:sepolia": "npx hardhat --network sepolia deploy --tags testnet",
    "deploy:localhost": "npx hardhat --network localhost deploy --tags local",
    "docs": "npx hardhat docgen",
    "eslint": "eslint './**/*.{js,jsx,ts,tsx}'",
    "eslint:fix": "yarn prettier && yarn eslint --fix",
    "format": "npx prettier --write 'contracts/**/*.sol'",
    "generate-reward": "npx hardhat --network localhost target-fund",
    "increase-time": "npx hardhat --network localhost increase-time",
    "install:rootpackages": "cd .. && yarn install && cd contracts",
    "lint": "npx solhint 'contracts/**/*.sol'",
    "postinstall": "rm -r ./node_modules/@nomiclabs/hardhat-ethers && cp -R ./node_modules/hardhat-deploy-ethers ./node_modules/@nomiclabs/hardhat-ethers",
    "preinstall": "yarn install:rootpackages",
    "prepare-local-test-env": "npx hardhat --network localhost prepare-local-test-env",
    "prettier": "yarn prettier:js --loglevel silent && yarn prettier:ts --loglevel silent",
    "prettier:js": "yarn prettier:js:pure './**/*.{js,jsx}'",
    "prettier:js:pure": "prettier --write",
    "prettier:ts": "yarn prettier:ts:pure './**/*.{ts,tsx}'",
    "prettier:ts:pure": "prettier --parser typescript --write",
    "start-node": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat node --no-deploy",
    "status": "npx hardhat --network localhost status",
    "allocate": "npx hardhat --network localhost allocate",
    "test": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat test",
    "type-check": "tsc --noEmit true",
    "verify:goerli": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat --network goerli etherscan-verify --license GPL-3.0",
    "verify:sepolia": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat --network sepolia etherscan-verify --license GPL-3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/wildland/octant.git"
  },
  "keywords": [
    "governance",
    "staking"
  ],
  "author": "Golem Foundation Contributors <contact@golem.foundation>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://gitlab.com/wildland/octant/issues"
  },
  "homepage": "https://wildland.io/",
  "devDependencies": {
    "@defi-wonderland/smock": "^2.3.4",
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomiclabs/hardhat-ethers": "2.2.2",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@openzeppelin/contracts": "^4.7.3",
    "@prb/math": "^2.5.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "chai": "^4.2.0",
    "chai-bignumber": "^3.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "ethers": "^5.7.2",
    "fs-extra": "^10.1.0",
    "hardhat": "^2.11.2",
    "hardhat-deploy": "^0.11.15",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solidity-coverage": "^0.7.21",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": "^5.0.2",
    "typescript-formatter": "^7.2.2"
  },
  "resolutions": {
    "ethereumjs-abi": "https://registry.npmjs.org/ethereumjs-abi/-/ethereumjs-abi-0.6.8.tgz"
  },
  "lint-staged": {
    "./**/*.js": [
      "yarn prettier:js:pure",
      "eslint --fix"
    ],
    "./**/*.{ts,tsx}": [
      "yarn prettier:ts:pure",
      "eslint --fix"
    ]
  }
}
